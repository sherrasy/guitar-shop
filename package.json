{
  "name": "guitar-shop",
  "version": "1.0.0",
  "description": "Проект «Guitar Shop»",
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./src/main.ts | pino-pretty --colorize --translateTime SYS:standard",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "cli": "ts-node ./src/main.cli.ts",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "6.1.1",
    "@types/convict-format-with-validator": "6.0.2",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "eslint": "8.39.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.1",
    "pino-pretty": "9.1.1",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "chalk": "5.2.0",
    "convict": "6.2.3",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.7",
    "dotenv": "16.3.1",
    "got": "12.5.3",
    "inversify": "6.0.1",
    "pino": "8.15.1",
    "reflect-metadata": "0.1.13"
  }
}
